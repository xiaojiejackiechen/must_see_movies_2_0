<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reviews

    <a data-toggle="collapse" href="#movie_reviews_new_form">
      Add review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.reviews.each do |review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to review, review %>

        <% if current_profile == review.reviewer %>
          <%= link_to review, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_reviews_new_form">
        <%= render partial: "movies/movie_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
