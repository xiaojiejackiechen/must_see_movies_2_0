<div class="card mb-3">
  <h2 class="card-header h4">
    Director #<%= director.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Director name</dt>
      <dd><%= director.director_name %></dd>

      <dt>Dob</dt>
      <dd><%= director.dob %></dd>

      <dt>Director number</dt>
      <dd><%= director.director_number %></dd>

      <dt>Bio</dt>
      <dd><%= director.bio %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @director.image, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back director, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_director_url(director), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to director, method: :delete, data: { confirm: "Do you really want to delete this director?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(director.updated_at) %> ago
  </div>
</div>
