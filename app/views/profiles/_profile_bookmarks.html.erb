<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bookmarks

    <a data-toggle="collapse" href="#profile_bookmarks_new_form">
      Add bookmark
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to bookmark, bookmark %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_bookmarks_new_form">
        <%= render partial: "profiles/profile_bookmarks_new_form" %>
      </div>
    </div>

  </ul>
</div>
